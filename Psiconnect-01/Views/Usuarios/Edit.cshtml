@model Psiconnect_01.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}


    <style>
        bg.image{
            background-image:url(/img/fundotelas);
            background-size: cover;
            background-repeat:no-repeat;

        }
    </style>

<body class="bg-image">
<h3 class="text-center">Editar informações</h3>


<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" readonly />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registro" class="control-label"></label>
                <input asp-for="Registro" class="form-control" readonly />
                <span asp-validation-for="Registro" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="Cpf" />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" onKeyUp="ForcaSenha()" id="password" size="15" minlength="6" maxlength="12" />
                <div id="password-status"></div>
                <span asp-validation-for="Senha" class="text-danger" ></span>
            </div>


            <!-- <div class="form-group">
                <label asp-for="Perfil" class="control-label"></label>
                 <select asp-for="Perfil" class="form-control"></select> 
                <select asp-for="Perfil" class="form-control" asp-items="Html.GetEnumSelectList<Perfil>()"></select>
                <span asp-validation-for="Perfil" class="text-danger"></span>
            </div> -->

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary m-1" />
                <a class="btn btn-danger float-left m-1" asp-action="IndexMeusDados">Voltar</a>
            </div>
        </form>
    </div>
</div>
    </body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
