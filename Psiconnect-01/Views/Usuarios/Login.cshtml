@model Psiconnect_01.Models.Usuario

@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="/css/login.css">

<div class="row justify-content-center">
    <div class="login-form">
        <form asp-action="Login">
            
            
            <div class="logo">
				<img src="img/LogoSemFundo.png" alt="Psiconnect">
			</div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2 class="text-center">
				Entre no Sistema
			</h2>
            <div class="form-group">
                <input asp-for="Cpf" class="form-control" placeholder="Insira seu CPF" required maxlength="11" />
		 <span asp-validation-for="Cpf" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <input asp-for="Senha" class="form-control" placeholder="Insira sua Senha" required />
		<span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary btn-lg btn-block" />
                <a class="nav-link text-info" asp-area="" asp-controller="Usuarios" asp-action="Index"><b>Nao tem cadastro? Cadastre aqui</b></a>
            </div>
		<p class="text-secondary">@ViewBag.Message</p>
        </form>
    </div>
</div>

<div>
    <!-- <a asp-action="Index">Back to List</a> -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
