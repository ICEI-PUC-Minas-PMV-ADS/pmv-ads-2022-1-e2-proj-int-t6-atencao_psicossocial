
@model Psiconnect_01.Models.RedefinicaoSenhaUsuario

@{
    ViewData["Title"] = "Passwordrecovery";
}


<style>
    .bg-image{
               background-image:url(/img/backlogin.png);
               background-position: center;
               background-size:cover;
               background-repeat: no-repeat;             
           }

           #form{
                border-radius: 10px;
                 box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
               padding: 20px 35px 20px 35px;
               background-color: rgba(251, 253, 255, 0.7);
           }
</style>

<script src="/js/site.js"></script>

<body class="bg-image">
<div class="row">
    <div class="col-md-4 ">
        <h4 class="text-center">Troca de Senha</h4>
        
        <div id="form">
        <form asp-action="Passwordrecovery">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Cpf"  class="control-label" ></label>
                <input id="cpf" onkeyup="maskCpf()" maxlength="14" asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="NovaSenha" class="control-label">Nova Senha</label>
                <input  asp-for="NovaSenha" class="form-control" type="password" id="password" minlength="6" maxlength="12" onKeyUp="ForcaSenha()"/>
                <div id="password-status"></div>
                <span asp-validation-for="NovaSenha" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="ConfirmarSenha" class="control-label">Confirmar Senha</label>
                <input id="confirm_password" asp-for="ConfirmarSenha" class="form-control" type="password" />
                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
               
            </div>

          
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary float-right"/>
                <a class="btn btn-info" asp-controller="Usuarios" asp-action="Login">Voltar</a>
            </div>
        </form>
        </div>
    </div>
</div>

   
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
